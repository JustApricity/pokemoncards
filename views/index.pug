extends layout

block content
  include mixins/pokemonCard
  div.container
    div.title
      p Personal Pokedex
      img.pikachu-icon(src='https://www.freeiconspng.com/uploads/pikachu-png-icon-24.png')
    div.card-container
      div.filter-container
        form(action='/' method='get')
          div.form-input
            label(for='type') Type
            select(id='type' name='type' autocomplete='off')
              each type in types
                option(value=type selected = (type === searchType)) #{type}
          button.button.save(type='submit') Filter
      div.buttonrow
        a.button.save(href="/add") Add Card
      div.card-view
        each card in cards
          +pokemonCard(card)

