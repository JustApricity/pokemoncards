                                option(value=type selected = (type === card.type)) #{type}
                div.form-input
                    p Resistant To:
                        select(id='Res1' name='Res1' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                        select(id='Res2' name='Res2' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                        select(id='Res3' name='Res3' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                div.form-input
                    p Resistant To:
                        select(id='RetreatCost1' name='RetreatCost1' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                        select(id='RetreatCost2' name='RetreatCost2' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                        select(id='RetreatCost3' name='RetreatCost3' autocomplete='off')
                            each type in types
                                option(value=type selected = (type === card.type)) #{type}
                div.submit-row
                    a.button.cancel(href='/') Cancel
